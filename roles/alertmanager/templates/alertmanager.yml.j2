global:
  resolve_timeout: 5m

route:
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h
  receiver: 'default'

  routes:
    # the webhook is triggered for each instance if no inhibitor is active for this instance
    - matchers:
        - autoup=~"trigger|inhibitor"
      group_by:
        - 'instance'
      group_wait: 30s
      group_interval: 1m
      repeat_interval: 1m
      receiver: 'autoup'
      

receivers:
  - name: 'default'
  - name: 'autoup'
    webhook_configs:
      - url: 'http://127.0.0.1:5000/webhook'
