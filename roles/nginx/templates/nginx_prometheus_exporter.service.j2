[Unit]
Description=NGINX Prometheus Exporter
After=network.target
After=nginx.service
StartLimitInterval=60s  # Add a start limit interval to delay restarts

[Service]
Type=simple
User=nginx_exporter
Group=nginx_exporter
ExecStart=/usr/local/bin/nginx-prometheus-exporter -web.listen-address=0.0.0.0:9113 -nginx.scrape-uri http://127.0.0.1:81/metrics
SyslogIdentifier=nginx_prometheus_exporter
Restart=on-failure  # Restart only on failure
RestartSec=30s  # Add a restart delay

[Install]
WantedBy=multi-user.target
